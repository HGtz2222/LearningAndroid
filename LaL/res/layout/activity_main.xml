<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" 
    android:background="@color/myYellow">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/title"
        android:gravity="center"
        android:layout_weight="2" 
        android:textSize="50sp"
        android:textColor="@color/textColor"/>

    <Button
        android:id="@+id/btn_lvl1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/lvl1" 
        android:layout_weight="1"
        android:background="@color/myBtn"/>

    <Button
        android:id="@+id/btn_lvl2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/lvl2"
        android:layout_weight="1"
        android:background="@color/myBtn" 
        />

    <Button
        android:id="@+id/btn_lvl3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/lvl3"
        android:layout_weight="1" 
        android:background="@color/myBtn" />

</LinearLayout>
